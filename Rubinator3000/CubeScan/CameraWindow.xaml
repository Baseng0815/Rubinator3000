<Window
    x:Class="Rubinator3000.CubeScan.CameraWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Rubinator3000.CubeScan"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CameraWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Image
            x:Name="previewTopLeft"
            Grid.Row="0"
            Grid.Column="0" />
        <Image
            x:Name="previewBottomLeft"
            Grid.Row="1"
            Grid.Column="0" />
        <Image
            x:Name="previewTopRight"
            Grid.Row="0"
            Grid.Column="1" />
        <Image
            x:Name="previewBottomRight"
            Grid.Row="1"
            Grid.Column="1" />
    </Grid>
</Window>
